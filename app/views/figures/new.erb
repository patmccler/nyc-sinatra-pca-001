<h2>Create New Figure</h2>

<form action="/figures" method="POST">
<label>Name:</label>
<input id="figure_name" type="text" name="figure[name]"><br>
<hr>
<h3>Titles</h3>
<% @titles.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]"
  id="title_<%=title.id%>" value="<%=title.id %>">
  <%= title.name%> <br>
<% end %>

<h3>New Title</h3>
<label>Name: </label>
<input type="text" name="title[name]" id="new_title"></input><br>
<hr>
<br>

<h3>Landmarks</h3>
<% @landmarks.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]"
  id="landmark_<%=landmark.id%>" value="<%=landmark.id %>">
  <%= landmark.name%> <br>
<% end %>

<h3>New landmark</h3>
<label>Name: </label>
<input type="text" name="landmark[name]" id="new_landmark"></input><br>
<label>Year Built: </label>
<input type="text" name="landmark[year_completed]"
id="landmark_year_completed"></input><br>

<input type="submit" value="Create New Figure">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
