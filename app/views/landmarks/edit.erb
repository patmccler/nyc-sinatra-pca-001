<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
<input type="hidden" name="_method" value="PATCH">
<label>Name:</label>
<input value="<%= @landmark.name%>" id="name" type="text" name="landmark[name]"><br>
<label>Year completed:</label>
<input value="<%= @landmark.year_completed%>" id="year_completed" type="text" name="landmark[year_completed]"><br>

<input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
